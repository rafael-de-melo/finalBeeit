@page "/games/details"

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Game</h2>
    <hr />
    @if (game is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">AppId</dt>
            <dd class="col-sm-10">@game.AppId</dd>
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@game.Name</dd>
        </dl>
        <div>
            <a href="@($"/games/edit?id={game.Id}")">Edit</a> |
            <a href="@($"/games")">Back to List</a>
        </div>
    }
</div>